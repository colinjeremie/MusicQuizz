<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.colinjeremie.willyoufindit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.TutoActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PickACategoryActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="deezer-blind-test"
                    android:scheme="willyoufindit" />
            </intent-filter>
        </activity>
        <activity android:label="@string/genre_activity_title" android:name=".activities.GenreActivity" android:screenOrientation="portrait" />
        <activity android:label="@string/radio_activity_title" android:name=".activities.RadioActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.PlayGameActivity" android:screenOrientation="portrait" />
    </application>

</manifest>