<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.github.colinjeremie.willyoufindit.fragments.PlayGameFragment">

    <TextView
        android:id="@+id/track_artist"

        android:visibility="gone"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/track_title"

        android:layout_below="@id/track_artist"
        android:visibility="gone"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/play_btn"

        android:visibility="visible"
        android:layout_centerInParent="true"
        android:tint="@color/colorAccent"
        android:background="@null"
        android:src="@drawable/play"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/play" />
    <ImageView
        android:id="@+id/pause_btn"

        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@null"
        android:src="@drawable/pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/pause" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="?attr/buttonBarButtonStyle"
            android:id="@+id/discover_song_btn"

            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/discover"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            style="?attr/buttonBarButtonStyle"
            android:id="@+id/next_song_btn"

            android:layout_weight="1"
            android:text="@string/next_song"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
